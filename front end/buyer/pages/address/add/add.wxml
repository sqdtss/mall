<!--pages/address/add/add.wxml-->
<view>
  <view>
    <van-cell-group custom-class="cell-group">
      <van-field model:value="{{ name }}" label="我的姓名" placeholder="收货人姓名" border="{{ false }}"/>
      <van-field model:value="{{ mobile }}" label="手机号码" placeholder="手机号" border="{{ false }}"/>
      <van-field model:value="{{ postalCode }}" label="邮政编码" placeholder="邮政编码" border="{{ false }}"/>
      <van-field value="{{ area }}" label="选择地区" placeholder="省、市、区" border="{{ false }}" bindtap="showPopup" readonly="{{true}}" />
      <van-field model:value="{{ detailedAddress }}" label="详细地址" placeholder="小区楼栋/乡村名称" type="textarea" maxlength="50"
        border="{{ false }}" show-word-limit="true" autosize="{{true}}" />
        <van-cell title-class="cell-title" title="设置成默认收货地址">
        <van-switch checked="{{ checked }}" size="24px" bind:change="onChange" />
      </van-cell>
    </van-cell-group>
  </view>
  <view>
    <van-button custom-class="button" color="linear-gradient(to right, #FF9017, #FD5432)" bind:click="submitForm" round>确认添加</van-button>
  </view>
  <view>
    <van-popup show="{{ show }}" round custom-style="height: 60%" position="bottom">
      <van-area area-list="{{ areaList }}" value="{{area}}" bind:confirm="onClickConfirm" bind:cancel="onClickcancel" />
    </van-popup>
  </view>
</view>