/* pages/product/detail/detail.wxss */
page{
  background-color: #F2F2F2;
}
.goods-message{
  width: 92%;
  height: auto;
  background-color: white;
  padding: 3% 4% 2% 4%;
}
.goods-message .char{
  font-size: 18px;
  display:inline-block;
  font-weight:700;
  padding-right: 2px;
  color:#ee0a24
}
.goods-message .price{
  font-size: 22px;
  display: block;
  font-weight:700;
  color:#ee0a24
}
.goods-message .title{
  font-size: 32rpx;
  font-weight: 455;
  display: block;
}
.goods-message .description{
  font-size: 26rpx;
  display: block;
  color: rgb(100, 99, 99);
}
.goods-send{
  font-weight: 402;
}
.goods-send text{
  font-weight: 400;
  font-size: 13px;
  padding-left: 15px;
}

.van-cell-group--inset{
  margin: 2% 2% 0 2% !important;
  background-color: white !important;
}

.goods-detail{
  width: 88%;
  margin: 0 4% 4% 4%;
  padding: 2%;
  background-color: whitesmoke;
  border-radius: 5px;
}

.goods-detail .title{
  display: inline-flex;
  width: 40%;
  font-size: 12px;
  padding-bottom: 5px;
  font-weight: 400;
  color: rgb(83, 83, 83);
}
.goods-detail .value{
  display: inline-flex;
  width: 60%;
  font-size: 12px;
  padding-bottom: 5px;
  font-weight: 400;
  color: rgb(56, 56, 56);
}
.goods-detail-image{
  width: 100%;
  height: 100%;
}
.footer{
  width: 100%;
  text-align: center;
  padding: 6% 0% 20% 0%;
  font-size: 10px;
  color: rgb(95, 95, 97);
} 
.popup-title{
  width: 100%;
  display: block;
  text-align: center;
  font-size: 15px;
  margin-top: 3%;
  color: rgb(59, 59, 59);
}
.popup-content{
  width: 100%;
  margin: 10% 0;
  display: block;
}
.popup-content text{
  font-size: 13px;
  color: rgb(89, 89, 90);
  margin: 0% 5% 1% 2%; 
}
.popup-bottom{
  width: 100%;
  height: auto;
  bottom: 0px;
  position: fixed;
}
.popup-button{
  width: 94%;
  margin: 3%;
}





