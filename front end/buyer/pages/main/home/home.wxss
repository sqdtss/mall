page{
  background-color: #F2F2F2;
}
.swiper{
  height: 130px;
  padding-bottom: 10px;
  background-color: white;
}
.swiper-image{
  margin: 2% 3%;
}
.grid{
  padding-top: 10px;
  padding-bottom: 10px;
}
.grid-item-text{
  padding-top: 5px;
}
.van-card{
  margin: 2% 3% 0 3% !important;
  background-color: white !important;
  border-radius: 6px !important;
}
.van-card__price{
  font-size: 14px !important;
}
.van-card__price-integer{
  font-size: 18px !important;
}
.goods-card-title{
  font-size: 30rpx;
}
.goods-card-price-top{
  font-size: 22rpx;
  color: rgb(105, 104, 104);
}
.goods-container-right{
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  border-radius: 0px 6px 6px 0px;
}
.footer{
  width: 100%;
  text-align: center;
  padding: 6% 0% 25% 0%;
  font-size: 10px;
  color: rgb(95, 95, 97);
}