/* pages/login/login.wxss */
.container {
  width: 100%;
  height: 100%;
  display: block;
  text-align: center;
  padding: 180rpx 0;
}
.info{
  display: block;
  padding: 2%;
  text-align: center;
  color: rgb(64, 64, 65);
  font-size: 24rpx;
  font-weight: 300;
}
.info-text{
  font-weight: 400;
  color: #0559ad;
}
.itemView{
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.input{
width: 250px;
height: 50px;
border: 1px solid lightgray;
border-radius: 25px;
}
.loginBtn{
  width: 200px;
  border: 1px solid lightgray;
  margin-top: 10px;
  border-radius: 25px;
}